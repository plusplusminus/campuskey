{% block content %}
<div class="row">
	<div class="col-md-12">
	<br>
		<div class="jumbotron text-center">
			<h1><strong>Your Room.<br>Your Home.</strong></h1>
			<br>
			<div class="row">
				<div class="col-md-8 col-md-offset-2">
					<p>CampusKey provides luxury fully furnished en-suite rooms carefully designed to meet a studentâ€™s needs. The room is fitted with an equipped kitchen, as well as TV with the option of DSTV.</p>
				</div>
			</div>
		</div>
	</div>
</div><!--/.row-->

<div class="row">
	{% for campus in model.campuses %}
		<div class="col-md-{{ campus.col }}">
			<a href="campus-single">
				<div style="background-color: #f1f1f1;">
					<br><br><br><br><br>
					<h4 class="text-center">{{ campus.name }}</h4>
					<br><br><br><br><br>
				</div>
			</a>
			<br>	
		</div>
	{% endfor %}
</div><!--/.row-->

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<h3 class="text-center">Each Room Includes:</h3>
		<br>

		{% for feature in model.features %}
			<div class="col-md-2">
				<div class="text-center">
					<i class="fa fa-{{ feature.icon }} fa-4x"></i>
					<h4>{{ feature.name }}</h4>
					<p>{{ feature.description }}</p>
				</div>
			</div>
		{% endfor %}
	</div>
</div><!--/.row-->

<br>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<ul class="list-inline text-center">
			<li><em><small><strong>Also included:</strong></small></em></li>
			{% for feature in model.morefeatures %}
				<li><em><small>{{ feature.name }}</small></em></li>
			{% endfor %}
		</ul>
	</div>
</div><!--/.row-->

<hr>

<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<h3 class="text-center">Choose Your Room Type</h3>
		<br>
	</div>

	{% for room in model.rooms %}
		<div class="col-md-4">
			<a href="room-single">
				<div style="background-color: #f1f1f1;">
					<br><br><br><br>
					<h4 class="text-center">{{ room.type }}</h4>
					<p class="text-center">{{ room.description }}</p>
					<br><br><br><br>
				</div>
			</a>
			<br>	
		</div>
	{% endfor %}
</div><!--/.row-->

{% endblock %}