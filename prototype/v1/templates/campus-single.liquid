<div class="row">

	<div class="col-md-12">
		<h4 class="text-center page-header">All Room Types</h4>
	</div>
	<div class="row">
		{% for room in model.rooms %}
			<div class="col-md-4">
				<a href="room-single">
					<div style="background-color: #f1f1f1;">
						<br><br><br><br>
						<h4 class="text-center">{{ room.type }}</h4>
						<p class="text-center">{{ room.description }}</p>
						<br><br><br><br>
					</div>
				</a>
				<br>	
			</div>
		{% endfor %}
	</div>

	<div class="col-md-6">
		<h4 class="text-center page-header">All Buildings</h4>
		<ul>			
			{% for building in model.buildings %}
			<li><a href="building-single">{{ building.name }}</a>	</li>
			{% endfor %}
		</ul>
	</div>

	<div class="col-md-6">
		<h4 class="text-center page-header">Campus Map</h4>
		<div class="embed-responsive embed-responsive-16by9">
			<iframe class="embed-responsive-item" src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d3567685.164721911!2d24.5843362!3d-29.1626818!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sza!4v1434180123677"></iframe>
		</div>
	</div>
</div><!--/.row-->
<br>
<hr>
<div class="row">
	<div class="col-md-12">
		<h3 class="text-center">Campus News &amp; Anouncements</h3>
		<br>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<div class="row">
			{% for news in model.newsitems %}
				<div class="col-md-4">
					<div class="list-group">
						<a href="#" class="list-group-item">
							<h4 class="list-group-item-heading">{{ news.title }}<br>
							<small>{{ news.date }} | {{ news.cat }}</small></h4>
							<hr>
							<p class="list-group-item-text">{{ news.body }}<br><br>
							Read more <i class="fa fa-long-arrow-right"></i></p>
						</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

</div><!--/.row-->

{% endblock %}